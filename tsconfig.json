{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./test",
    "lib"
  ]
}